<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_striped_inherit" inherit_id="web.external_layout_striped">
        <!-- Añadir display flex para mostrar los campos en fila -->
        <xpath expr="//div[hasclass('d-flex')]" position="attributes">
            <attribute name="style">display: flex
            ;
                flex-direction: row
            ;
                justify-content: space-between
            ;</attribute>
        </xpath>
        <!-- Añadir listas de campos personalizados con verificación segura de 'o' -->
        <xpath expr="//div[@name='company_address']" position="replace">
            <ul style="list-style-type: none;">
                <li>Calle Olmo, 1</li>
                <li>28500 Arganda del Rey (Madrid)</li>
                <li><strong>Tel./Fax: 910 598 234</strong></li>
                <li><strong>Móvil: 669 37 15 49</strong></li>
                <li><strong>mataymargolles@gmail.com</strong></li>
            </ul>
            <ul>
                <li>CONSTRUCCIÓN</li>
                <li>RESISTENCIA FUEGOS</li>
                <li>REVESTIMIENTOS DECORATIVOS</li>
                <li>IMPERMEABILIZACIONES</li>
                <li>AISLAMIENTO TÉRMICO / ACÚSTICO</li>
            </ul>
        </xpath>
        <xpath expr="//div[hasclass('o_footer_content')]" position="replace">
            <div class="o_footer_content border-top pt-1 text-start">
                <div class="text-muted" style="line-height: 1;">
                    <span t-field="company.report_footer"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>